@page "/"

<h1>Welcome to ShopEasy</h1>
<p class="lead">A clean architecture e-commerce demo built with .NET 10, Blazor Server, and EF Core.</p>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Products</h5>
                <p class="card-text">Browse the product catalog by category.</p>
                <a href="/products" class="btn btn-primary">View Products</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">My Orders</h5>
                <p class="card-text">View and track your order history.</p>
                <a href="/orders" class="btn btn-primary">View Orders</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Admin</h5>
                <p class="card-text">Manage all orders and update statuses.</p>
                <a href="/admin/orders" class="btn btn-outline-secondary">Admin Panel</a>
            </div>
        </div>
    </div>
</div>
